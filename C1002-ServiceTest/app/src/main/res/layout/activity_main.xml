<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.servicetest.MainActivity">

    <Button
        android:id="@+id/button_startService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="button_startService"
        android:text="start Service" />

    <Button
        android:id="@+id/button_stopService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="button_stopService"
        android:text="stop Service" />

    <Button
        android:id="@+id/button_bindService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="button_bindService"
        android:text="bind Service" />

    <Button
        android:id="@+id/button_unBindService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="button_unBindService"
        android:text="unBind Service" />

    <ProgressBar
        android:id="@+id/NUlllllllllllllllllllllll"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button_startIntentService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="button_startIntentService"
        android:text="start Intent Service" />

</LinearLayout>
